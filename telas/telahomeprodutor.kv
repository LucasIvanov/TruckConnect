#:kivy 1.11.1

<TelaHomeProdutor>:
    produto: produto_input
    quantidade: quantidade_input
    origem: origem_input
    destino: destino_input

    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20
        Label:
            text: 'Postar Nova Carga'
            font_size: '24sp'
        TextInput:
            id: produto_input
            hint_text: 'Produto (ex: Soja, Milho)'
        TextInput:
            id: quantidade_input
            hint_text: 'Quantidade (em toneladas)'
        TextInput:
            id: origem_input
            hint_text: 'Cidade de Origem'
        TextInput:
            id: destino_input
            hint_text: 'Cidade de Destino'
        Button:
            text: 'Postar Carga'
            on_press: root.postar_carga()
        Button:
            text: 'Logout'
            on_press: root.manager.current = 'login_produtor'