#:kivy 1.11.1

<TelaHomeTransportadora>:
    lista_cargas: lista_cargas_id
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20
        Label:
            text: 'Cargas Dispon√≠veis'
            font_size: '24sp'
        ScrollView:
            BoxLayout:
                id: lista_cargas_id
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
        Button:
            text: 'Atualizar'
            on_press: root.atualizar_lista_cargas()
        Button:
            text: 'Logout'
            on_press: root.manager.current = 'login_transportadora'